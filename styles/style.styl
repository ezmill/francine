@import 'jeet'
@import 'rupture'

// edit()
offwhite = rgb(244,244,239)
bg = rgba(255,255,255,0.4)
blueblack = rgb(17,18,29)
bordcol = rgba(0,0,0,0.1)

p
	font-family: 'Gentium Book Basic', serif;
	color rgb(17,18,29)
.cover
	background-image: url("../images/cityscape.jpg") 

	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: cover
	background-position: 0% 0%
	background-repeat no-repeat

.title
	+below(600px)
		display none
.long-title
	position absolute
	top 0px
	margin 0
	font-size 1.3em
	+above(600px)
		display none

html, body 
	height: 100%
	background-color: white
	overflow: hidden
	font-family:'Museo Sans W01'
	margin 0
.app
	position absolute
	top 0
	left 0
	right 0
	bottom 0
.app *, .app *:after, .app *:before 
	-webkit-box-sizing: border-box
	-moz-box-sizing: border-box
	box-sizing: border-box
.bottom
    top: 3.75em
    bottom: 0
    width: 100%
	position: absolute

.right 
	position: absolute
	// width: 70%
	span(4/5)
	right: 0
	height: 100%
	overflow: auto
	padding: 1.25em
	+below(600px)
		stack()
		height: 100%
		width: 100%
		padding: .5em
		padding-top: 90px

	// background-color blueblack
.left
	border-right: 0.0625em solid rgba(0, 0, 0, 0.1)
	position: absolute
	background-color offwhite
	// width: 30%
	span(1/5)
	height: 100%
	-webkit-box-shadow: 5px 0px 8px 0px rgba(50, 50, 50, 0.65)
	-moz-box-shadow: 5px 0px 8px 0px rgba(50, 50, 50, 0.65)
	box-shadow: 5px 0px 8px 0px rgba(50, 50, 50, 0.65)	
	background-color offwhite
	+below(600px)
		stack()
		width:100%
		height: 80px
		// height:20%

h1
	color: blueblack
	position: absolute
	// text-shadow: 1px 1px 3px #000
	left: 10px
	font-size 2em
	width: 100%
	font-style: italic
	+below(500px)
		font-size 1.75em

.bringus
	height 100%
	background: radial-gradient(ellipse at center, rgba(244,244,239,0.85) 0%, offwhite 100%)
	border solid 4px offwhite /* W3C */
	border-radius 3px 3px
	padding 10px

a
	color rgb(17,18,29)
	text-decoration none

nav
	
	position relative
	top 230px	
	+below(600px)
		z-index 1
		position absolute
		width 100%
		top 40px
.nav
	span(1/4)
	text-align center
	height 40px
	line-height 40px
	box-sizing border-box
	+below(600px)
		border-right bordcol solid 1px;
		border-top bordcol solid 1px;
	+above(600px)
		stack()
		border-bottom bordcol solid 1px
.nav-top
	+above(600px)
		border-top bordcol solid 1px
.nav:nth-child(4)
	+below(600px)
		border-right none
.nav:active
	background-color blueblack
	color offwhite	
.active
	
	color offwhite
	
	background-color blueblack
.post
	border-bottom solid bordcol 1px
	center(600px)
.title
	// font-family 'Gentium Book Basic', serif
	font-style none
.date
	font-style italic